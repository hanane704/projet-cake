{% extends 'base.html.twig' %}

{% block title %}Cake index{% endblock %}

{% block body %}
    <h1>Cake index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                  <th>Image</th>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for cake in cakes %}
            <tr>
                <td>{{ cake.id }}</td>
                <td>
                <img src="{{ asset('uploads/'  ~ cake.imageFilename) }}"/>
                </td>
                <td>{{ cake.name }}</td>
                <td>{{ cake.description }}</td>
                <td>{{ cake.price }}</td>
                <td>
                    <a href="{{ path('admin_cake_show', {'id': cake.id}) }}">show</a>
                    <a href="{{ path('admin_cake_edit', {'id': cake.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_cake_new') }}">Create new</a>
{% endblock %}
